<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.InstagramClone" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/black</item>
         <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
<!--        <item name="android:windowFullscreen">true</item>-->
        <item name="colorPrimaryVariant">?android:attr/windowBackground</item>
    </style>

    <!--    TODO: Try change Style BottomNavigationView     -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/black_transparent</item>
<!--        <item name="android:src">@drawable/post</item>-->
    </style>


    <!--    TODO: Try changefont On MaterialToolbar     -->
    <style name="Base.Theme.InstagramCloneFont" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/grand_hotel</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Toolbar.TitleTextProfile" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Button.Grey" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/black_transparent</item>
    </style>


    <!--  You can style name as Anything but Theme
          should be of your application only   -->
    <style name="Screen_Full" parent="Theme.InstagramClone">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--   TODO: Closing   -->
    <style name="Theme.InstagramClone" parent="Base.Theme.InstagramClone" />
</resources>